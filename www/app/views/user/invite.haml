%fb:serverFbml
  %script{:type => 'text/fbml'}
    %fb:fbml
      %fb:request-form{:method => 'POST',
          :type => t('invite.type'),
          :content => t('invite.message') + '<fb:req-choice url="http://apps.facebook.com/beerquest/accept-challenge" label="' + t('invite.accept') + '" /><fb:req-choice url="http://apps.facebook.com/beerquest/deny-challenge" label="' + t('invite.refuse') + '" />',
          :action => home_url}
        %fb:multi-friend-selector{:actiontext => t('invite.selector'),
          :showborder => 'true',
          :exclude_ids => @exclude.join(','),
          :bypass => 'cancel',
          :email_invite => 'true',
          :import_external_friends => 'true'}
