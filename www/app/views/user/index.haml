- @css = 'home'
%table.cols
  %tr.small
    %td.small
    %td
    %td.small
  %tr
    %td.small
    %td.left-col
      .col-content
        %table.home
          %tr.bars
            %td.bars
              .play
                %a{:href => bar_url(@me.last_bar)}
                  = image_tag "play-now_#{I18n.locale}.png", :width => 164, :height => 74, :alt => t('home.play_now')
              .alternative= t('home.alternative')
              %table.bar-grid
                %tr
                  %td
                    = render :partial => 'bar', :object => Bar.get(1)
                  %td
                    = render :partial => 'bar', :object => Bar.get(2)
              .notice= t('home.notice_html', :link => link_to(t('home.notice_link'), bartners_program_url, :target => '_blank'))
            %td.scores
              = render :partial => 'scores'
    %td.small.shadow
  %tr.small
    %td.small
    %td.shadow
    %td.small.shadow
