%tr.barscore{:class => (barscore[:account_id] == @me.id) ? 'me' : ''}
  %td.portrait
    = image_tag barscore[:profile_picture], :alt => barscore[:full_name], :class => 'portrait'
  %td.description
    .rank= "##{barscore[:rank]}"
    .name= barscore[:full_name]
    .score
      Score :
      = image_tag 'mini-biere.png', :alt => t('beers')
      %span.value= barscore[:score]
